<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-2xl font-bold">Templates de Formulário</h1>
    <%= link_to new_form_template_path, class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded inline-flex items-center" do %>
      <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      Novo Template
    <% end %>
  </div>
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Nome
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Departamento
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Questões
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Formulários
          </th>
          <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
            Ações
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @form_templates.each do |template| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
              <%= template.name %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= template.department.name %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= pluralize(template.questions_array.size, 'questão', 'questões') %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= pluralize(template.forms.count, 'formulário', 'formulários') %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
              <%= link_to "Visualizar", form_template_path(template), class: "text-blue-600 hover:text-blue-900" %>
              <%= link_to "Editar", edit_form_template_path(template), class: "text-green-600 hover:text-green-900" %>
              <%= button_to "Excluir", form_template_path(template), 
                  method: :delete, 
                  class: "text-red-600 hover:text-red-900 inline", 
                  form: { class: "inline" },
                  data: { turbo_confirm: "Tem certeza que deseja excluir este template?" } %>
            </td>
          </tr>
        <% end %>
        <% if @form_templates.empty? %>
          <tr>
            <td colspan="5" class="px-6 py-4 text-center text-sm text-gray-500">
              Nenhum template de formulário cadastrado.
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
