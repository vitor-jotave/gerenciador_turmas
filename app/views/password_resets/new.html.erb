<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Redefinir Senha
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Digite seu email para redefinir sua senha
      </p>
    </div>
    <% if flash[:alert] %>
      <div class="rounded-md bg-red-50 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-red-800">
              <%= flash[:alert] %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
    <%= form_tag password_reset_path, method: :post, class: "mt-8 space-y-6" do %>
      <div class="rounded-md shadow-sm -space-y-px">
        <div>
          <%= email_field_tag :email, nil,
                            class: "appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm",
                            placeholder: "Email",
                            required: true,
                            autofocus: true %>
        </div>
      </div>
      <div>
        <%= submit_tag "Continuar",
                      class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
      <div class="text-sm text-center">
        <%= link_to "Voltar para o login", new_user_session_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
      </div>
    <% end %>
  </div>
</div>