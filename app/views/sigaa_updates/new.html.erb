<div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12">
  <div class="relative py-3 sm:max-w-xl sm:mx-auto">
    <div class="relative px-4 py-10 bg-white mx-8 md:mx-0 shadow rounded-3xl sm:p-10">
      <div class="max-w-md mx-auto">
        <div class="divide-y divide-gray-200">
          <div class="py-8 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7">
            <h2 class="text-2xl font-bold mb-8 text-center text-gray-900">Atualizar Dados do SIGAA</h2>
            <% if flash[:alert].present? %>
              <div class="rounded-md bg-red-50 p-4 mb-6">
                <div class="flex">
                  <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  <div class="ml-3">
                    <p class="text-sm font-medium text-red-800"><%= flash[:alert] %></p>
                  </div>
                </div>
              </div>
            <% end %>
            <% if flash[:notice].present? %>
              <div class="rounded-md bg-green-50 p-4 mb-6">
                <div class="flex">
                  <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  <div class="ml-3">
                    <p class="text-sm font-medium text-green-800"><%= flash[:notice] %></p>
                  </div>
                </div>
              </div>
            <% end %>
            <% if flash[:log].present? %>
              <div class="mt-8 p-4 bg-gray-50 rounded-lg overflow-auto max-h-96">
                <h3 class="text-lg font-medium text-gray-900 mb-4">Log de Atualização</h3>
                <pre class="whitespace-pre-wrap text-sm text-gray-600 font-mono">
<%= flash[:log].join("\n") %>
                </pre>
              </div>
            <% end %>
            <% if flash[:passwords].present? %>
              <div class="mt-8 p-4 bg-gray-50 rounded-lg overflow-auto max-h-96">
                <h3 class="text-lg font-medium text-gray-900 mb-4">Senhas Temporárias</h3>
                <pre class="whitespace-pre-wrap text-sm text-gray-600 font-mono">
<%= flash[:passwords].join("\n") %>
                </pre>
              </div>
            <% end %>
            <%= form_tag sigaa_update_path, multipart: true, class: "space-y-6" do %>
              <div>
                <label class="block text-sm font-medium text-gray-700">
                  Arquivo de Turmas (classes.json)
                </label>
                <div class="mt-1">
                  <%= file_field_tag :classes_json,
                                   accept: ".json",
                                   required: true,
                                   class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
                </div>
                <p class="mt-2 text-sm text-gray-500">
                  Arquivo JSON contendo as informações das turmas
                </p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">
                  Arquivo de Membros (class_members.json)
                </label>
                <div class="mt-1">
                  <%= file_field_tag :members_json,
                                   accept: ".json",
                                   required: true,
                                   class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
                </div>
                <p class="mt-2 text-sm text-gray-500">
                  Arquivo JSON contendo as informações dos membros das turmas
                </p>
              </div>
              <div class="pt-6">
                <%= submit_tag "Atualizar Dados",
                             class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
                             data: { turbo: false } %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>